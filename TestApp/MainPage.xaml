            <!-- 
                After developing more applications, a 
                single column was becoming too long, so
                I remodeled the layout to be a two column 
                layout. 
            -->
            <Grid HorizontalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <!-- 0 -->
                    <ColumnDefinition Width="Auto" />
                    <!-- 1 -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <!-- 0 -->
                    <RowDefinition Height="Auto" />
                    <!-- 1 -->
                    <RowDefinition Height="Auto" />
                    <!-- 2 -->
                    <RowDefinition Height="Auto" />
                    <!-- 3 -->
                    <RowDefinition Height="Auto" />
                    <!-- 4 -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 0 -->
                <Button 
                    Text="Sales Calculator" 
                    HorizontalOptions="Center"
                    Clicked="SalesCalculator"
                    Margin="10"
                    Grid.Row="0"
                    Grid.Column="0"
                />
                <Button 
                    Text="Tip Calculator" 
                    HorizontalOptions="Center"
                    Clicked="TipCalculator" 
                    Margin="10"
                    Grid.Row="0"
                    Grid.Column="1"
                />

                <!-- 1 -->
                <Button 
                    Text="Counter" 
                    HorizontalOptions="Center"
                    Clicked="Counter"
                    Margin="10"
                    Grid.Row="1"
                    Grid.Column="0"
                />
                <Button 
                    Text="Hour Calculator" 
                    HorizontalOptions="Center"
                    Clicked="HourCalculator"
                    Margin="10"
                    Grid.Row="1"
                    Grid.Column="1"
                />

                <!-- 2 -->
                <Button 
                    Text="Fizz Buzz Number Generator" 
                    HorizontalOptions="Center"
                    Clicked="FizzBuzzNumberGenerator"
                    Margin="10"
                    Grid.Row="2"
                    Grid.Column="0"
                />
                <Button 
                    Text="Math Quiz" 
                    HorizontalOptions="Center"
                    Clicked="MathQuiz"
                    Margin="10"
                    Grid.Row="2"
                    Grid.Column="1"
                />

                <!-- 3 -->
                <Button 
                    Text="Tic Tac Toe" 
                    HorizontalOptions="Center"
                    Clicked="TicTacToe"
                    Margin="10"
                    Grid.Row="3"
                    Grid.Column="0"
                />
                <Button 
                    Text="Shopping Total" 
                    HorizontalOptions="Center"
                    Clicked="ShoppingTotal"
                    Margin="10"
                    Grid.Row="3"
                    Grid.Column="1"
                />

                <!-- 4 -->
                <Button 
                    Text="TextRPG" 
                    HorizontalOptions="Center"
                    Clicked="TextRPG"
                    Margin="10"
                    Grid.Row="4"
                    Grid.Column="1"
                    IsVisible="False"
                />
                <Button 
                    Text="Dice" 
                    HorizontalOptions="Center"
                    Clicked="Dice"
                    Margin="10"
                    Grid.Row="4"
                    Grid.Column="0"
                />

            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
