<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Donate"
             Title="Donate">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Donate"
                HorizontalOptions="Center"
                FontSize="30"
                Margin="20"
            />

            <Label 
                Loaded="DonateText"
                FontSize="20"
                Margin="50"
                x:Name="lblDonateText"
            />

            <Button
                Text="Donate"
                HorizontalOptions="Center"
                Clicked="GoToDonationPage"
                Margin="20"
            />

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>