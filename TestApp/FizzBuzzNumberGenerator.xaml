<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.FizzBuzzNumberGenerator"
             Title="FizzBuzzNumberGenerator">
    <VerticalStackLayout MinimumHeightRequest="500">
        <Label 
            Text="Welcome to .NET MAUI!"
            HorizontalOptions="Center" />
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Max Number: " HorizontalTextAlignment="Center" Margin="10"/>
            <Entry 
                Placeholder="100" 
                x:Name="txtMaxNumber" 
                HorizontalTextAlignment="Center" 
                Margin="10"
                />
        </HorizontalStackLayout>

        <Button Text="CalculateFizzBuzz" HorizontalOptions="Center" Clicked="GenerateFizzBuzz"/>


        <ScrollView>
            <ListView 
                x:Name="fizzBuzzBox"
                SelectionMode="Single"
                IsEnabled="True"
                HeightRequest="300"
                HorizontalOptions="Center"
                BackgroundColor="AntiqueWhite"
                MaximumWidthRequest="400"
                Margin="20"
            >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label 
                                Text="{Binding}"
                                FontSize="36"
                                HorizontalTextAlignment="Center"
                            />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
        

    </VerticalStackLayout>
</ContentPage>